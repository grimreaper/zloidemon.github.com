---
layout: ~
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>VG's blog</title>
  <id>http://zlonet.ru/</id>
  <updated>{{ site.time | date_to_xmlschema }}</updated>

  <author>
    <name>Veniamin Gvozdikov</name>
    <email>vg@FreeBSD.org</email>
  </author>

  {% for post in site.posts limit:10 %}
  <entry>
    <title>{{ post.title }}</title>
    <link href="{{ post.url | prefix:'http://zlonet.ru' }}"/>
    <id>{{ post.id | prefix:'http://zlonet.ru' }}</id>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <summary type="html">{{ post.excerpt | xml_escape }}</summary>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
</feed>
